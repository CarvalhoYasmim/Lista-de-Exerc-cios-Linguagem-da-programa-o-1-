# População inicial
populacao_A = 90000000  # País A
taxa_crescimento_A = 0.03  # 3%

populacao_B = 200000000  # País B
taxa_crescimento_B = 0.015  # 1,5%

# Inicializa o contador de anos
anos = 0

# Calcula o crescimento populacional
while populacao_A < populacao_B:
    populacao_A += populacao_A * taxa_crescimento_A
    populacao_B += populacao_B * taxa_crescimento_B
    anos += 1

# Exibe o resultado
print(f"A população do país A ultrapassará a do país B em {anos} anos.")